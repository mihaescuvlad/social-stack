body,
html {
  margin: 0;
  padding: 0;
  height: 100vh;
  overflow: hidden;
  font-family: 'Open Sans', sans-serif;
  background: gray;
  color: #fff;
}

body {
  background: url(./assets/{{ background }}) repeat center center fixed;
  background-size: cover;
  overflow: auto;
}

{% if enable_birds %}
#vanta {
  z-index: 0;
  position: fixed;
  left: 0;
  top: 0;
  width: 100vw;
  height: 100vh;
}
{% endif %}

main {
  position: relative;
  opacity: 0;
  filter: blur(10px);
  transition: opacity 1s ease-in-out, filter 1s ease-in-out;
}

main.visible {
  opacity: 1;
  filter: blur(0px);
}

header {
  margin-top: 3rem;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 0.25rem;
}

header > img {
  width: 8.5rem;
  height: 8.5rem;
  border-radius: 10%;
  border: 1px solid #fff;
  box-shadow: #151515 0px 2px 16px 0px;
  transition: transform 500ms ease-out;
}

header > img:hover {
  transform: scale(1.1);
}

header > h1 {
  display: inline-block;
  font-size: 0.8rem;
  font-weight: bold;
  border-radius: 1rem;
  background-color: #000a;
  color: #fff;
  padding: 0.3rem 0.6rem;
  border: 1px solid #fffa;
  backdrop-filter: blur(5px) saturate(160%) contrast(180%);
  /* Safari Compatibility */
  -webkit-backdrop-filter: blur(5px) saturate(160%) contrast(180%);
}

ul {
  box-sizing: border-box;
  list-style: none;
  margin: 0 auto;
  padding: 2rem;
  max-width: 480px;
}

ul > li {
  background-color: #fffa;
  backdrop-filter: blur(5px) saturate(160%) contrast(180%);
  /* Safari Compatibility */
  -webkit-backdrop-filter: blur(5px) saturate(160%) contrast(180%);
  border-radius: 10rem;
  margin: 1.5rem 0;
  box-shadow: #151515 0px 2px 16px 0px;
  transition: transform 250ms;
}

ul > li:hover {
  transform: translateY(-5px);
}

ul > li > a {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  gap: 0.5rem;
  padding: 1rem;
}

a {
  color: black;
  text-decoration: none;
}
